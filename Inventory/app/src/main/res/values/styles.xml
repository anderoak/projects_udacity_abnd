<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Catalog list items -->
    <style name="item_strip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/back_strip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="item_image">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">@string/product_image</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="item_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="item_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="price_quantity_label_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="item_price_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:text">@string/price_label_layout</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="item_quantity_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:text">@string/quantity_label_layout</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="item_quantity">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:text">@string/quantity_label_layout</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="price_quantity_value_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="item_price_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3.5</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">11.9sp</item>
    </style>

    <style name="item_quantity_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3.5</item>
        <item name="android:layout_marginRight">2dp
        </item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">11.9sp</item>
    </style>

    <style name="item_currency_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/currency_product_price</item>
    </style>

    <style name="item_unit_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">11.9sp</item>
        <item name="android:text">@string/pcs_unit</item>
    </style>

    <style name="buttons_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="button_sell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/button_sell</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="edit_label_product_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">@string/hint_product_name</item>
    </style>    
    
    <style name="edit_label_provider_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:text">@string/label_provider</item>
    </style>
    
    <style name="edit_label_provider_email">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:text">@string/label_provider_email</item>
    </style>
    
    <style name="edit_price_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:text">@string/label_price</item>
    </style>
    
    <style name="edit_quantity_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:text">@string/label_quantity</item>
    </style>
    
    <style name="edit_product_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/hint_product_name</item>
    </style>
    
    <style name="edit_provider_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/hint_product_provider</item>
    </style>
    
    <style name="edit_provider_email">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/hint_product_provider_email</item>
    </style>

    <style name="edit_price">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_weight">2</item>
        <item name="android:maxLines">1</item>
        <item name="android:hint">@string/hint_product_price</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:minWidth">98dp</item>
    </style>
    
    <style name="edit_plus_icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:contentDescription">@string/button_plus</item>
        <item name="android:background">@drawable/plus_icon</item>
    </style>

    <style name="edit_quantity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:hint">@string/hint_product_quantity</item>
        <item name="android:inputType">number</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="edit_minus_icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:contentDescription">@string/button_minus</item>
        <item name="android:background">@drawable/minus_icon</item>
    </style>

    <style name="edit_order_more_icon">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:contentDescription">@string/button_order_more</item>
        <item name="android:background">@drawable/buy_icon</item>
    </style>

    <style name="edit_touch_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:text">@string/touch_to_change</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="edit_product_image">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:contentDescription">@string/product_no_image</item>
        <item name="android:background">@drawable/no_image</item>
    </style>

    <style name="catalog_empty_stock_image">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:contentDescription">@string/empty_stock_image</item>
        <item name="android:src">@drawable/empty_stock</item>
    </style>

    <style name="catalog_stock_empty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/empty_stock_image</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:text">@string/empty_view_title_text</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="catalog_get_started">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/empty_title_text</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:text">@string/empty_view_subtitle_text</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">#A2AAB0</item>
    </style>

    <style name="catalog_float_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:src">@drawable/plus_white</item>
    </style>
</resources>
