<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fa4108"
    tools:context="com.sushilounge.sushilounge.MainActivity">

    <ImageView
        android:id="@+id/bUp"
        android:src="@drawable/sushilogo_up"
        android:layout_width="410dp"
        android:layout_height="290dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/bDn"
        android:src="@drawable/sushilogo_dn"
        android:layout_width="410dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bUp"
        />

    <TextView
        android:id="@+id/face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.facebook.com/sushiloungetijuca"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bUp"
        />

    <RelativeLayout
        android:id="@+id/bloco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/face"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/comida"
            android:src="@drawable/comida"
            android:layout_width="140dp"
            android:layout_height="135dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/texto"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Amplo cardápio e rodízio de comida nipônica, além de cervejas, vinhos e saquês,\nem um espaço descontraído."
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@id/face"
            android:layout_toEndOf="@id/comida"
            />

        <TextView
            android:id="@+id/hora"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Aberto de Seg. à Sáb.\nde 18h às 00h"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/texto"
            android:layout_toEndOf="@id/comida"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/tele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(21) 2568-2387"
        android:textSize="25sp"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bloco"
        />

    <TextView
        android:id="@+id/ender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R. Carlos Vasconcelos, 113 - Tijuca, Rio de Janeiro"
        android:textAlignment="center"
        android:textSize="16sp"
        android:background="#fa4108"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:padding="10dp"
        android:layout_below="@id/bDn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
