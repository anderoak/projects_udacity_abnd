<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musically">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ArtistListActivity"
            android:label="@string/artists"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".AlbumListActivity"
            android:label="@string/albums"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".MusicListActivity"
            android:label="@string/musics"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".StoreActivity"
            android:label="@string/music_store"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".InAppPayment"
            android:label="@string/payment"
            />
    </application>

</manifest>